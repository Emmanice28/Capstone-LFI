@page
@model Capstone_LFI.Pages.LoginModel

@{
    Layout = null;
}

<link rel="stylesheet" href="~/css/Design.css">

<style>
    body {
        background-image: url('/images/LFI Background.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        margin: 0;
    }
    .container {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    input {
        width: 275px;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 3px;
    }
</style>
<div class="container">
    <div style="border:1px solid black;">
        <form method="post" style="padding:30px; padding-bottom:20px;padding-top:40px;">
            <div style="padding-bottom:10px;">
                <img src="/images/LFI Logo with words.png" style="height: 80px; width: 290px; align-content:center;" />
            </div>
            <div style="padding-left:5px;">
                <div style="padding-left:10px;">
                    <input type="text" id="username" name="username" value="Username"
                           onclick="this.value=''"
                           onmouseout="if (!this.value.trim()) this.value='Username'">
                </div>
                <div style="padding-left:10px;">
                    <input type="text" id="password" name="password" value="Password"
                           onclick="this.value=''; this.type='password';"
                           onmouseout="if (!this.value.trim()) { this.value='Password'; this.type='text'; }">
                </div>
            </div>
            <button style="width: 300px; height:30px;" type="submit">Login</button>
        </form>
        <div style="border:1px solid black; padding:30px; display:flex; padding-left:53px;padding-bottom:35px; border-block-end-color:transparent; border-left-color:transparent; border-right-color:transparent; background-color:#f7f7f7; font-weight:bold;">
            <div style="padding-left:0px; padding-right:30px;">
                <label id="forgotpassword" style="color:#444444; cursor:pointer; transition:color 0.3s ease;" onclick="goToForgotPage()" onmouseover="this.style.color='#ababab';" onmouseout="this.style.color='#444444';">Forgot password?</label>
            </div>
            <div>
                <label for="createaccount" onclick="goToCreatePage()" style="color:#444444; cursor:pointer; transition:color 0.3s ease;" onclick="goToForgotPage()" onmouseover="this.style.color='#ababab';" onmouseout="this.style.color='#444444';">Create a user.</label>
            </div>
        </div>
    </div>
</div>
<script>
    function goToForgotPage() {
        window.location.href = '@Url.Page("/Login_ForgotPassword")';
    }
    function goToCreatePage() {
        window.location.href = '@Url.Page("/Login_CreateAccount")';
    }
</script>
